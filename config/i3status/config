general {
  output_format = "i3bar"
  colors = true
  interval = 5
}

order += "wireless wlp7s0"
order += "ethernet eth0"

order += "load"
order += "tztime local"

wireless wlp7s0 {
  format_up = "W: (%quality at %essid) %ip"
  format_down = "W: down"
}

ethernet eth0 {
# if you use %speed, i3status requires the cap_net_admin capability
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

tztime local {
  format = "%m-%d %H:%M"
}

load {
  format = "%5min"
}
